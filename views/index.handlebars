<div class="container">
	<div class="row">
		<div class="col-med">
			<h1>Nom Nom BURGERTIME!!!</h1>
			<img src="../public/assets/img/burger.png" alt="Yummo Burger Pic">		
		</div>
	</div>
	<div class="row">
		<div class="col">
			<h2>Hmmm, which burger to nom?</h2>
			<ul>
  				{{#each burgers}}
    				{{#unless devoured}}
      					{{> burgers/burger-block devoured=true}}
    				{{/unless}}
  				{{/each}}
			</ul>
		</div>
		<div class="col">
			<h2>Yummmo! That was nommy!<h2>
			<ul>
  				{{#each burgers}}
    				{{#if devoured}}
      					{{> burgers/burger-block devoured=false}}
    				{{/if}}
  				{{/each}}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<h3>Eat.More.BURRRGERRRRRS!!!!</h3>

			<form class="create-form">
				<div class="form-group">
    				<label for="new-burger">Burger Name:</label>
    				<input type="text" id="new-burger" name="name">
  				</div>
  				<div class="form-group">
    				<label for="devoured">Will Nom?</label><br>
    				<input type="radio" name="devoured" value="1" checked> Will Nom!<br>
    				<input type="radio" name="devoured" value="0"> Nommed
  				</div>
  				<button type="submit">Add Cat</button>
			</form>
		</div>
	</div>
</div>